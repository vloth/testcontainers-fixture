{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "sourceMap": false,
    "esModuleInterop": true,
    "target": "es2019",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/src/*": ["src/*"],
      "@/util": ["src/util/index"],
      "@/common": ["src/common"]
    }
  }
}
